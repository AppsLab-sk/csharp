<Window x:Name="Create_new_user" x:Class="BookLibraryGUI.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookLibraryGUI"
        mc:Ignorable="d"
        Title="Add New User" Height="230" Width="420">
    <Window.Background>
        <ImageBrush ImageSource="/wallpaperflare.com_wallpaper2.jpg"/>
    </Window.Background>
    <Grid>
        <TextBlock Margin="22,23,0,0" TextWrapping="Wrap" HorizontalAlignment="Left" Width="62" Height="16" VerticalAlignment="Top" Text="User Name" Foreground="White"/>
        <TextBlock Margin="22,58,0,0" TextWrapping="Wrap" Text="User City" HorizontalAlignment="Left" Width="67" Height="16" VerticalAlignment="Top" Foreground="White"/>
        <TextBlock Margin="22,95,0,0" TextWrapping="Wrap" Text="User Genre" HorizontalAlignment="Left" Width="62" Height="16" VerticalAlignment="Top" Foreground="White"/>
        <TextBlock Margin="22,128,0,0" TextWrapping="Wrap" Text="User Birth Date" HorizontalAlignment="Left" Width="97" Height="16" VerticalAlignment="Top" Foreground="White"/>
        <TextBlock x:Name="UserID" HorizontalAlignment="Left" Margin="140,156,0,0" TextWrapping="Wrap" Text="{Binding GetUserID}" VerticalAlignment="Top" Height="28" Width="175" Foreground="White" />

        <TextBox x:Name="UNameTextBox" Margin="0,16,14,0" HorizontalAlignment="Right" Width="266" Height="30" VerticalAlignment="Top" Text="Enter user name" VerticalContentAlignment="Center" Background="#66969696" Foreground="White"/>
        <TextBox x:Name="UCityTextBox" Margin="0,51,14,0" HorizontalAlignment="Right" Width="266" Height="30" VerticalAlignment="Top" Text="Enter user city" VerticalContentAlignment="Center" Background="#66969696" Foreground="White"/>
        <DatePicker x:Name="UBirth" Margin="0,121,14,0" Height="30" HorizontalAlignment="Right" Width="266" VerticalAlignment="Top" VerticalContentAlignment="Center"/>
        <ComboBox x:Name="UGenreComboBox" ItemsSource="{Binding}" Margin="0,86,14,0" Height="30" HorizontalAlignment="Right" Width="266" VerticalAlignment="Top" />

        <Button x:Name="SubmitButton" Content="Create" Margin="0,156,14,0" Click="SubmitButton_Click" HorizontalAlignment="Right" Width="86" Height="30" VerticalAlignment="Top" Background="#7dff82"/>
        <Button x:Name="CloseButton" Content="Close" Click="CloseButton_Click" HorizontalAlignment="Left" Margin="22,156,0,0" VerticalAlignment="Top" Height="30" Width="86" Background="#ff7d7d"/>
    </Grid>
</Window>
