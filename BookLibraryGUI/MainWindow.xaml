                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>

        <Label Content="List of books" Margin="127,19,0,0" HorizontalAlignment="Left" Width="80" Height="26" VerticalAlignment="Top"/>

