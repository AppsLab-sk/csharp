        Title="Murin nevie C#" Height="450" Width="800"
        Icon="/icon.ico">
    <Grid>
        <Menu Height="19" VerticalAlignment="Top" HorizontalAlignment="Left" Width="800">
            <MenuItem Header="_Application">
                <MenuItem Header="_Exit" Click="MenuItem_Exit_Click"/>

            </MenuItem>
            <MenuItem Header="_Add">
                <MenuItem Header="_Add book" Click="MenuItem_AddBook_Click"/>
            </MenuItem>
        </Menu>

        <ListView Name="IDsList" Margin="10,43,0,0" Height="370" VerticalAlignment="Top" HorizontalAlignment="Left" Width="52">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>

        <Label Content="ID" HorizontalAlignment="Left" Margin="25,19,0,0" VerticalAlignment="Top" Height="26" Width="22"/>

        <ListView Name="BookList" Margin="67,43,0,0" HorizontalAlignment="Left" Width="200" Height="370" VerticalAlignment="Top">
