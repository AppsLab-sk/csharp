            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>

        <Label Content="Author" Margin="322,19,0,0" Height="26" VerticalAlignment="Top" HorizontalAlignment="Left" Width="50"/>

        <ListView Name="ReleaseList" HorizontalAlignment="Left" Width="107" Height="371" VerticalAlignment="Top" Margin="427,42,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>

        <Label Content="Release Date" Margin="441,19,0,0" HorizontalAlignment="Left" Width="79" Height="26" VerticalAlignment="Top"/>

        <ListView Name="GenreList" Margin="539,42,0,0" Height="371" VerticalAlignment="Top" HorizontalAlignment="Left" Width="100">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>

        <Label Content="Genre" HorizontalAlignment="Left" Margin="568,19,0,0" VerticalAlignment="Top"/>


    </Grid>

</Window>
    
